{
  "name": "slugify-persian",
  "version": "1.0.1",
  "description": "Slugifies a string with persian characters, useful for URLs",
  "keywords": [
    "slugify",
    "slug",
    "url",
    "urlify",
    "persian",
    "iranian",
    "iran",
    "persian-tool"
  ],
  "license": "MIT",
  "homepage": "https://github.com/alitnk/slugify-persian",
  "author": "Alireza Zamani <alirezazamani2922@gmail.com> (https://github.com/alitnk)",
  "repository": {
    "type": "git",
    "url": "https://github.com/alitnk/slugify-persian.git"
  },
  "devDependencies": {
    "coveralls": "^3.1.0",
    "mocha": "^7.2.0",
    "nyc": "^15.1.0"
  },
  "main": "./slugify.js",
  "files": [
    "LICENSE",
    "README.md",
    "slugify.d.ts",
    "slugify.js"
  ],
  "types": "slugify.d.ts",
  "scripts": {
    "build": "node bin/build",
    "test:ci": "npx mocha --recursive",
